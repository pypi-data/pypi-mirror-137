root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_size = 4
# isort plugin configuration
known_first_party = oarepo_communities
known_third_party = alembic, invenio_communities, invenio_accounts, invenio_db, invenio_records, invenio-files-rest, invenio_oaiserver
multi_line_output = 2
default_section = THIRDPARTY
skip = .eggs

# MD files
[*.md]
indent_size = 4

# CSS, HTML, JS, JSON, YML
[*.{css,html,js,json,yml}]
indent_size = 2

[{package.json}]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4
